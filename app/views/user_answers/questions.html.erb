<% content_for :title do %>
User Survey
 <% end %>
 <%= render :partial => 'partials/header'%>
 <!-- main menu-->
 <%= render :partial => 'partials/sidebar'%>
 <!-- / main menu-->
 <div class="app-content content container-fluid">
    <div class="content-wrapper">
       <div class="content-body">
          <!-- Basic form layout section start -->
          <section id="basic-form-layouts">
             <div class="match-height">
                <div class="card p-0">
                   <div class="card-header">
                      <h4 class="card-title" id="basic-layout-tooltip">Survey</h4>
                      <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                      <div class="heading-elements">
                         <ul class="list-inline mb-0">
                            <li><a data-action="collapse"><i class="icon-minus4"></i></a></li>
                            <li><a data-action="reload"><i class="icon-reload"></i></a></li>
                            <li><a data-action="expand"><i class="icon-expand2"></i></a></li>
                         </ul>
                      </div>
                   </div>
                   <div class="card-body collapse in">
                      <div class="card-block">
                      
                      <%= form_with url: "/user_answers", method: :post do |form| %>
                        <input class="form-check-input" type="hidden" name="user_answer[link_surveys_id]" value="<%= @survey_id %>" />
                      <% @obj.each do |question_data| %>

                      <div class="row col-5" style="margin-left: 20px;" >
                        <h4 class="fw-bold text-center mt-3"></h4>
                        
                            <p class="fw-bold"><%= get_ques_by_id(question_data[:ques]) %>?</p>
                            <input class="form-check-input" type="hidden" name="user_answer[question][]" value="<%= question_data[:ques] %>" />
                            <% question_data[:ans].each do |ans_data| %>

                            <div class="form-check mb-2">
                            
                                <input class="form-check-input" type="checkbox" name="user_answer[answer][]" id="radioExample1_<%= question_data[:ques] %>" value="<%= question_data[:ques] %>_<%= ans_data.answer_id %>" />
                                <label class="form-check-label" for="radioExample1_<%= question_data[:ques] %>">
                                <%= get_ans_by_id(ans_data.answer_id) %>
                                </label>
                            </div>
                            <% end %>


                   </div>
                   <% end %>
                   <div class="text-end">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>

                   <% end %>
                        

                                                    
                        
                      </div>


                   </div>
                </div>
             </div>
          </section>   
       </div>
    </div>
 </div>
